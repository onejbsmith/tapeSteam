@*<h3>PrintPieGauge</h3>*@
@using tdaStreamHub.Data;
<div style="border: 1px outset">
    <table>

        <tr>
            <td style="text-align:center;zoom:.8">
                <b class="@badgeClass" style="width:100%">@total</b>
            </td>
        </tr>
        <tr>
            <td class="btn">
                <RadzenChart Style="width:100px; height:70px;position:relative;left:10px;">
                    <RadzenPieSeries Data="@printsData" CategoryProperty="Quarter" Radius="30"
                                     Fills="@(new List<string>() { "darkred" , "red", "gainsboro" , "green" , "lime" })"
                                     ValueProperty="Revenue" />
                    <RadzenChartTooltipOptions Visible="false" />
                    <RadzenLegend Visible="false" />
                </RadzenChart>
            </td>
        </tr>
        <tr>
            <td style="text-align:center;zoom:.8">
                <b class="btn btn-circle btn-primary" style="width:100%">@(seconds.ToString())</b>
            </td>
        </tr>
    </table>
</div>

@code {

    [Parameter]
    public string symbol { get; set; }

    [Parameter]
    public int seconds { get; set; }

    [Parameter]
    public bool isPrintsSize { get; set; }


}
