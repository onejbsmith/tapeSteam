@*<h3>ChartConfigure</h3>*@
<RadzenAccordion Style="background-color:transparent">
    <Items>
        <RadzenAccordionItem Text="@title" Icon="account_balance_wallet" Style="width:100%;display:inline-flex">

            <label style="width:90%"> <RadzenSlider Min="0" Max="60" @bind-Value=@seconds Style="width:80%" />&nbsp;@seconds&nbsp;seconds</label>

        </RadzenAccordionItem>
    </Items>
</RadzenAccordion>

@code {
    [Parameter]
    public string title { get; set; }

    private static string showTitle { get; set; }

    public static int seconds
    {
        get { return _seconds; }
        set
        {
            _seconds = value;
            
            //if (_seconds == 0)
            //   showTitle = ChartConfigure.title;
            //else
            //    showTitle = $"{ChartConfigure.title} Aggregated for {ChartConfigure.seconds} seconds";
        }
    }
    private static int _seconds;}
