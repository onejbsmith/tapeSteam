@*<h3>ChartConfigure</h3>*@
<RadzenAccordion Style="background-color:transparent">
    <Items>
        <RadzenAccordionItem Text="@showTitle" Icon="account_balance_wallet" Style="width:50%;display:inline-flex">

            <span>Seconds to Aggregate: &nbsp;[@seconds]&nbsp;
            <RadzenSlider Min="0" Max="60" @bind-Value=@seconds Style="width:33%;position:relative;top:8px;margin:10px" /></span>
            <br />
            <span>Max # of Prices:&nbsp;<RadzenNumeric @bind-Value="@xAxisMaxCategories" TTValue="int" Min="60" Max="600" Step="10" Style="margin:10px;width:100px"></RadzenNumeric></span>
            <span>Max Size Height:&nbsp;<RadzenNumeric  @bind-Value="@yAxisHigh" TValue="int" Min="0" Max="100000" Step="5000" Style="margin:10px;width:100px"></RadzenNumeric></span>
        </RadzenAccordionItem>
    </Items>
</RadzenAccordion>
<style>
    .ui-inputtext {
        color:#333;
        font-weight:800;
        font-size:large;
    }
</style>

@code {

    public static int xAxisMaxCategories = 100;

    public static int yAxisHigh = 5000;

    [Parameter]
    public string title
    {
        get { return _title1; }
        set
        {
            _title1 = value;
            title0 = value;
            seconds = seconds + 1;
            seconds = seconds - 1;
        }
    }
    private string _title1;

    public static string title1 { get; set; }
    static string title0;
    private static string showTitle { get; set; }


    public static int seconds
    {
        get { return _seconds; }
        set
        {
            _seconds = value;

            if (_seconds == 0)
                showTitle = title0;
            else
                showTitle = $"{title0} Aggregated for {seconds} seconds";
        }
    }
    private static int _seconds = 3;
}
