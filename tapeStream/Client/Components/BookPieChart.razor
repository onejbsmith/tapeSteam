@*<h3>BookPieChart</h3>*@
@using tapeStream.Client.Data;
<div style="border: 1px outset">
    <table>
        <tr>
            @*<td>
                    <h3><RadzenLabel Text='@bids' class="@badgeClass" /></h3>
                </td>*@
            <td style="text-align:center;zoom:.8">
                <b class="btn btn-circle " style="width:100%">@bids</b>
            </td>
        </tr>
        <tr>
            <td>
                <div>
                    <RadzenChart Style="width:100px; height:70px;position:relative;left:10px;">

                        <RadzenPieSeries Data="@bookData" CategoryProperty="Price" Radius="30"
                                         Title="@(seconds.ToString())"
                                         Fills="@(new List<string>() {  "lightgreen","tomato"})"
                                         ValueProperty="Size" />
                        <RadzenChartTooltipOptions Visible="false" />
                        <RadzenLegend Visible="false" />
                    </RadzenChart>
                </div>
            </td>
        </tr>
        <tr>

            <td style="text-align:center;zoom:.8">
                <b class="btn btn-circle btn-info" style="width:100%">@(seconds.ToString())</b>
            </td>

        </tr>
    </table>
</div>

@*<RadzenLabel Text="@(bookData[0].Size.ToString())"></RadzenLabel>
    <RadzenLabel Text="@(bookData[1].Size.ToString())"></RadzenLabel>*@
<style>

    .article {
        flex: auto 1 0;
        width: 20px;
        max-height: 50px;
        padding-top: 7px;
    }
</style>

@code {

    string badgeClass = "btn btn-circle";
    string bids;
    string asks;

    [Parameter]
    public string symbol { get; set; }

    [Parameter]
    public int seconds { get; set; }

    [Parameter]
    public bool isPrintsSize { get; set; }

    [Parameter]
    public int moduloBook { get; set; }

}
