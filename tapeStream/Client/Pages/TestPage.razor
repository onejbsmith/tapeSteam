                        </Template>
                    </RadzenGridColumn>
                    <RadzenGridColumn HeaderCssClass="right" TextAlign="Radzen.TextAlign.Right" TItem="Trade" Property="Profit" Title="Profit" Width="80px">
                        <Template Context="data">
                            @String.Format("{0:n2}", data.Profit)
                        </Template>
                    </RadzenGridColumn>                    
                    <RadzenGridColumn HeaderCssClass="right" TextAlign="Radzen.TextAlign.Right" TItem="Trade" Property="Total" Title="Total" Width="80px">
                        <Template Context="data">
                            @String.Format("{0:n2}", data.Total)
                        </Template>
                    </RadzenGridColumn>
                    <RadzenGridColumn TItem="Trade" Property="ProfPerHr" Title="Prof/Hr" Sortable="true" Filterable="true" Width="80px" />
                    <RadzenGridColumn TItem="Trade" Property="AvgProfit" Title="AvgProfit" Sortable="true" Filterable="true" Width="80px" />
                    <RadzenGridColumn TItem="Trade" Property="AvgDur" Title="AvgDur" Sortable="true" Filterable="true" Width="80px" />

                    <RadzenGridColumn TItem="Trade" Property="BatAvg" Title="BatAvg" Sortable="true" Filterable="true" Width="80px" />
                    <RadzenGridColumn TItem="Trade" Property="AvgLoss" Title="AvgLoss" Sortable="true" Filterable="true" Width="80px" />
                    <RadzenGridColumn TItem="Trade" Property="AvgWin" Title="AvgWin" Sortable="true" Filterable="true" Width="80px" />
                    <RadzenGridColumn TItem="Trade" Title="Run Date" Sortable="true" Filterable="true">
                        <Template Context="data">
                            @(data.DateTime.ToString("MM-d-yyyy HH:mm:ss.ff"))
                        </Template>
                    </RadzenGridColumn>
                </Columns>
            </RadzenGrid>

